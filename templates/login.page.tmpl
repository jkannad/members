{{template "base_plain" .}}
{{define "content"}}
     <div class="d-flex justify-content-center">
        <div class="col-md-12 col-lg-4">
            <form id="login" class="needs-validation" novalidate action="/member/login" method="POST">
                <input type="hidden" name="csrf_token" value="{{.CSRFToken}}">
                <div class="mb-3 row">
                    <div class="col">
                        <label for="user_name" class="col-sm-12 col-form-label">User name</label>
                    </div>
                    <div class="col-sm-9">
                        <input type="text" class="form-control" id="user_name" name="user_name" value="" required>
                    </div>
                </div>
                <div class="mb-3 row">
                    <div class="col">
                        <label for="inputPassword" class="col-sm-12 col-form-label">Password</label>
                    </div>
                    <div class="col-sm-9">
                        <input type="password" class="form-control" id="password" name="password" required>
                    </div>
                </div>
                <div class="d-grid col-3 mx-auto">
                    <button class="btn btn-success" id="sign_in" name="sign_in" type="submit">Sign In</button>
                </div>
            </form>
        </div>
    </div>
{{end}}

{{define "js"}}
    <script>
        document.getElementById("sign_in").addEventListener("click", function() {
            let form = document.getElementById("login");
            if (!form.checkValidity()) {
                event.preventDefault();
                event.stopPropagation();
                form.classList.add('was-validated');
            } 
        }); 
    </script>
{{end}}
